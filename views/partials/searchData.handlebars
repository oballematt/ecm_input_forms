        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'Buddy Bishop'}}
        <option class='buddy' name="Buddy" style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'Cedric Bouey'}}
        <option class='cedric' name="Cedric" style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'Dave Cooper'}}
        <option class='dave' name="Dave" style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'Grace Hsieh'}}
        <option class='grace' name="Grace" style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'John Milton'}}
        <option class='john' name="John" style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'Matt Stevens'}}
        <option class='matt' name="Matt" style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'Meagan Jones'}}
        <option class='meagan' name="Meagan" style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'Pat Mazur'}}
        <option class='pat' name="Pat" style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'Richard Shearman'}}
        <option class='richard' name='Richard' style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
        {{#each staffLead1}}
        {{#ifEquals staff_lead 'Travis Isakson'}}
        <option class='travis' name='Travis' style='display: none'>{{project_id}}</option>
        {{/ifEquals}}
        {{/each}}
    </select>
    <button class="btn btn-success load" type="submit">Search</button>
</div>