<div id="addBaseline" class="card border-secondary mv w-100 text-light" style="background-color: #333f48;">
    <h5 style="background-color: #bf5700;" class="card-header">Baseline</h5>
    <div class="card-body w-100">
        <div class="table-responsive">
            <div class="text-end">
                {{#with metadata}}
                <button id="baselineBtn" type="button" class="btn btn-success">
                    <i class="fas fa-plus-circle">&nbsp;Add
                        Record
                    </i>
                </button>
                {{/with}}
            </div>
            <table class="table text-light table-borderless mt-3">
                <thead>
                    <tr class='text-center bordered'>
                        <th></th>
                        <th class="bordered" scope="col">CHW
                            <span class='units'>[tonhr]</span>
                        </th>
                        <th class="bordered" scope="col">ELE
                            <span class='units'>[kWh]</span>
                        </th>
                        <th class="bordered" scope="col">STM
                            <span class='units'>[lb]</span>
                        </th>
                        <th class="bordered" scope="col">HHW
                            <span class='units'>[mmbtu]</span>
                        </th>
                        <th class="bordered" scope="col">GAS
                            <span class='units'>[CCF]</span>
                        </th>
                        <th class="bordered" scope="col">WTR
                            <span class='units'>[kgal]</span>
                        </th>
                        <th class="bordered" scope="col">Peak CHW
                            <span class='units'>[ton]</span>
                        </th>
                        <th class="bordered" scope="col">Labor
                            <span class='units'>[Hours]</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <form action='/' id="searchData" method='POST'>
                        <tr class="text-center">
                            <th style="width: 100px" class="bordered">Baseline</th>
                            <td class="commas bordered numCHW">
                                {{#each newBaseline}}
                                {{#ifEquals commodity 'CHW'}}
                                {{value}}
                                {{/ifEquals}}
                                {{/each}}
                            </td>
                            <td class="commas bordered numELE">
                                {{#each newBaseline}}
                                {{#ifEquals commodity 'ELE'}}
                                {{value}}
                                {{/ifEquals}}
                                {{/each}}
                            </td>
                            <td class="commas bordered numSTM">
                                {{#each newBaseline}}
                                {{#ifEquals commodity 'STM'}}
                                {{value}}
                                {{/ifEquals}}
                                {{/each}}
                            </td>
                            <td class="commas bordered numHHW">
                                {{#each newBaseline}}
                                {{#ifEquals commodity 'HHW'}}
                                {{value}}
                                {{/ifEquals}}
                                {{/each}}
                            </td>
                            <td class="commas bordered numGAS">
                                {{#each newBaseline}}
                                {{#ifEquals commodity 'GAS'}}
                                {{value}}
                                {{/ifEquals}}
                                {{/each}}
                            </td>
                            <td class="commas bordered numWTR">
                                {{#each newBaseline}}
                                {{#ifEquals commodity 'WTR'}}
                                {{value}}
                                {{/ifEquals}}
                                {{/each}}
                            </td>
                            <td class="commas bordered numPeakCHW">
                                {{#each newBaseline}}
                                {{#ifEquals commodity 'Peak CHW'}}
                                {{value}}
                                {{/ifEquals}}
                                {{/each}}
                            </td>
                            <td class="commas bordered numLabor">
                                {{#each newBaseline}}
                                {{#ifEquals commodity 'Labor'}}
                                {{value}}
                                {{/ifEquals}}
                                {{/each}}
                            </td>
                        </tr>
                    </form>
                    <tr class='text-center borderTop'>
                        <td></td>
                        <td>
                            {{#each newBaseline}}
                            {{#ifEquals commodity "CHW"}}
                            <button id={{id}} name="CHW" class="btn btn-warning editBaseline">
                                <i class="fas fa-edit"></i>
                            </button>
                            <span class="units mt-3"><button id={{id}} name="CHW" class="btn btn-danger deleteBaseline">
                                    <i class="fas fa-trash-alt"></i>
                                </button></span>
                            {{/ifEquals}}
                            {{/each}}
                        </td>
                        <td>
                            {{#each newBaseline}}
                            {{#ifEquals commodity "ELE"}}
                            <button id={{id}} name="ELE" class="btn btn-warning editBaseline">
                                <i class="fas fa-edit"></i>
                            </button>
                            <span class="units mt-3"><button id={{id}} name="ELE" class="btn btn-danger deleteBaseline">
                                    <i class="fas fa-trash-alt"></i>
                                </button></span>
                            {{/ifEquals}}
                            {{/each}}
                        </td>
                        <td>
                            {{#each newBaseline}}
                            {{#ifEquals commodity "STM"}}
                            <button id={{id}} name="STM" class="btn btn-warning editBaseline">
                                <i class="fas fa-edit"></i>
                            </button>
                            <span class="units mt-3"><button id={{id}} name="STM" class="btn btn-danger deleteBaseline">
                                    <i class="fas fa-trash-alt"></i>
                                </button></span>
                            {{/ifEquals}}
                            {{/each}}
                        </td>
                        <td>
                            {{#each newBaseline}}
                            {{#ifEquals commodity "HHW"}}
                            <button id={{id}} name="HHW" class="btn btn-warning editBaseline">
                                <i class="fas fa-edit"></i>
                            </button>
                            <span class="units mt-3"><button id={{id}} name="HHW" class="btn btn-danger deleteBaseline">
                                    <i class="fas fa-trash-alt"></i>
                                </button></span>
                            {{/ifEquals}}
                            {{/each}}
                        </td>
                        <td>
                            {{#each newBaseline}}
                            {{#ifEquals commodity "GAS"}}
                            <button id={{id}} name="GAS" class="btn btn-warning editBaseline">
                                <i class="fas fa-edit"></i>
                            </button>
                            <span class="units mt-3"><button id={{id}} name="GAS" class="btn btn-danger deleteBaseline">
                                    <i class="fas fa-trash-alt"></i>
                                </button></span>
                            {{/ifEquals}}
                            {{/each}}
                        </td>
                        <td>
                            {{#each newBaseline}}
                            {{#ifEquals commodity "WTR"}}
                            <button id={{id}} name="WTR" class="btn btn-warning editBaseline">
                                <i class="fas fa-edit"></i>
                            </button>
                            <span class="units mt-3"><button id={{id}} name="WTR" class="btn btn-danger deleteBaseline">
                                    <i class="fas fa-trash-alt"></i>
                                </button></span>
                            {{/ifEquals}}
                            {{/each}}
                        </td>
                        <td>
                            {{#each newBaseline}}
                            {{#ifEquals commodity "Peak CHW"}}
                            <button id={{id}} name="Peak CHW" class="btn btn-warning editBaseline">
                                <i class="fas fa-edit"></i>
                            </button>
                            <span class="units mt-3"><button id={{id}} name="PeakCHW"
                                    class="btn btn-danger deleteBaseline">
                                    <i class="fas fa-trash-alt"></i>
                                </button></span>
                            {{/ifEquals}}
                            {{/each}}
                        </td>
                        <td>
                            {{#each newBaseline}}
                            {{#ifEquals commodity "Labor"}}
                            <button id={{id}} name="Labor" class="btn btn-warning editBaseline">
                                <i class="fas fa-edit"></i>
                            </button>
                            <span class="units mt-3"><button id={{id}} name="Labor"
                                    class="btn btn-danger deleteBaseline">
                                    <i class="fas fa-trash-alt"></i>
                                </button></span>
                            {{/ifEquals}}
                            {{/each}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>