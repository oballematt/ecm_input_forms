<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Savings</li>
        </ol>
    </nav>
    <form action='/savings' method="POST">
        <div class="card border-secondary w-100 text-light" style="background-color: #333f48">
            <h5 style="background-color: #bf5700;" class="card-header">Savings</h5>
            <div class="card-body w-100 text-end">
                <table id="tableData" class="table text-light text-center mt-3">
                    <thead>
                        <tr>
                            <th scope="col">Project ID</th>
                            <th scope="col">Phase</th>
                            <th scope="col">Commodity</th>
                            <th scope="col">Unit</th>
                            <th scope="col">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="input-group mb-3">
                                    <input disabled name="project_id" type="text" class="form-control project_id">
                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <select name="phase" class="form-select phase" id="inputGroupSelect01">
                                        <option disabled selected>Choose</option>
                                        <option>MV</option>
                                        <option>Predicted</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <select name="commodity" class="form-select commodity" id="inputGroupSelect01">
                                        <option disabled selected>Choose</option>
                                        <option>CHW</option>
                                        <option>ELE</option>
                                        <option>STM</option>
                                        <option>HHW</option>
                                        <option>GAS</option>
                                        <option>WATER</option>
                                        <option>PEAK_CHW</option>
                                        <option>LABOR</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <select name="unit" class="form-select unit" id="inputGroupSelect01">
                                        <option disabled selected>Choose</option>
                                        <option>tonhr</option>
                                        <option>kWh</option>
                                        <option>lb</option>
                                        <option>mmbtu</option>
                                        <option>CCF</option>
                                        <option>kgal</option>
                                        <option>ton</option>
                                        <option>Hours</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <input name="value" type="text" class="form-control value">
                                </div>
                            </td>
                            <td>
                                <button type="button" style="background-color: #bf5700;"
                                    class="btn btn-warning text-light addRowS"><i
                                        class="fas fa-plus-circle"></i>&nbsp;Add</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row text-center my-3">
                <div class="col-4">
                    <a href='/baseline'><button type="button" class='btn btn-warning'>Back</button></a>
                </div>
                <div class="col-6 text-end">
                    <button disabled type="button" id="finish" class="btn btn-success" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        Finish
                    </button>
                </div>
            </div>
        </div>
    </form>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="card border-secondary w-100 text-light" style="background-color: #333f48">
                    <h5 style="background-color: #bf5700;" class="card-header">Success!</h5>
                    <div class="card-body">
                        <div class="modal-body text-center mt-2">
                            <h2 style="font-size: 40px;">Your Project has been successfully created!</h2>
                        </div>
                        <div class="modal-footer">
                            <a id="link"><button style="background-color: #bf5700; color: white" type="button"
                                    class="btn">Go Home</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>