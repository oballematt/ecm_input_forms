<div class="container d-flex justify-content-center align-items-center">
    <div class="row margin">
        {{#with costHours}}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-white">
                <li class="breadcrumb-item"><a href="/ecmforms">Back</a></li>
                <li class="breadcrumb-item" aria-current="page">Edit {{project_id}}</li>
            </ol>
        </nav>
        <form action='/update/costs_hours/{{id}}' id="formData" method="POST">
            <div class="card border-secondary w-100 text-light">
                <h5 style="background-color: #bf5700;" class="card-header">Costs &amp; Hours</h5>
                <div class="card-body w-100 text-end">
                    <div id="errors" class="text-start"></div>
                    <table id="tableData" class="table text-light text-center mt-3">
                        <thead>
                            <tr>
                                <th scope="col">Implementation or Annual</th>
                                <th scope="col">Category</th>
                                <th scope="col">Costs</th>
                                <th scope="col">Hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="display: none;">
                                    <div class="input-group mb-3">
                                        <input disabled value="{{project_id}}" name="project_id" type="text"
                                            class="form-control">
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group mb-3">
                                        <div class="input-group mb-3">
                                            <select name="imp_or_ann" class="form-select imp_or_ann" id="inputGroupSelect01">
                                                <option disabled selected>{{imp_or_ann}}</option>
                                                <option value='implementation'>Implementation</option>
                                                <option value='annual'>Annual</option>
                                            </select>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group mb-3">
                                        <div class="input-group mb-3">
                                            <select name="category" class="form-select category" id="inputGroupSelect01">
                                                <option disabled selected>{{category}}</option>
                                                <option value='emo'>EMO</option>
                                                <option value='analysts'>Analysts</option>
                                                <option value='maintenance'>Maintenance</option>
                                                <option value='ets'>ETS</option>
                                                <option value='bot'>BOT</option>
                                                <option value='other_ut'>OtherUT</option>
                                                <option value='materials'>Materials</option>
                                                <option value='non_ut'>Non-UT Contract</option>
                                                <option value='contingency'>Contingency</option>
                                            </select>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group mb-3">
                                        <input value="{{cost}}" name="cost" type="text" class="form-control cost">
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group mb-3">
                                        <input value="{{hours}}" name="hours" type="text" class="form-control hours">
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="button" id={{id}} class="btn btn-success text-light updateCost">Submit</button>
                </div>
            </div>
        </form>
        {{/with}}
    </div>
</div>