<div class="row mt-5">
    <div class="col-md-12">
        <div class="card w-100 text-light mb-3" style="background-color: #333f48">
            <div style="background-color: #bf5700;" class="card-header">
                <h5>Predicted %</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-light text-end">
                        <thead>
                            <tr>
                                <th style="width: 12%"></th>
                                {{#each response}}
                                <th class='title' scope="col">{{commodity}}</th>
                                {{/each}}
                                <th scope='col'>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">%</th>
                                {{#each response}}
                                <td class="percent">{{savings_percent}}</td>
                                {{/each}}
                                {{#with percentTotal}}
                                <td class="percent">{{percent_total}}</td>
                                {{/with}}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card text-light w-100 mb-3" style="background-color: #333f48">
            <div style="background-color: #bf5700;" class="card-header">
                <h5>Predicted Plant</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table text-light text-end table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 20%"></th>
                                {{#each response1}}
                                <th class='title' scope="col">{{commodity}}</th>
                                {{/each}}
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">Plant mmbtu</th>
                                {{#each response1}}
                                <td class="whole text-end">{{plant_savings}}</td>
                                {{/each}}
                                {{#with response3}}
                                <td class="whole">{{plant_savings_sum}}</td>
                                {{/with}}
                            </tr>
                            <tr>
                                <th scope="row">CTWater kg</th>
                                {{#each response2}}
                                <td class="whole">{{plant_savings}}</td>
                                {{/each}}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card border-secondary w-100 text-light mb-3" style="background-color: #333f48">
            <div style="background-color: #bf5700;" class="card-header">
                <h5>Predicted Entity Savings</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-end text-light" id="data_table">
                        <thead>
                            <tr>
                                <th style="width: 12%"></th>
                                {{#each response4}}
                                <th class='title' scope="col">{{commodity}}</th>
                                {{/each}}
                                <th scope="col">Total</th>
                                {{#if response10}}
                                <th scope="col">Miscellaneous</th>
                                {{/if}}
                                <th scope="col">Ann Cash Flow</th>
                                <th scope="col">Payback</th>
                                <th scope="col">NPV</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if response6}}
                            <tr>
                                <th scope="row">AUX</th>
                                {{#each response6}}
                                <td class="whole_dollar text-end">{{fb_plus_fr}}</td>
                                {{/each}}
                                {{#with response7}}
                                <td class="whole_dollar text-end">{{fb_fr_total}}</td>
                                {{/with}}
                                {{#with response10}}
                                <td class="whole_dollar">{{misc_savings}}</td>
                                {{/with}}
                                {{#with ann1}}
                                <td class="whole_dollar">{{cash_flow}}</td>
                                {{/with}}
                                {{#with payback1}}
                                <td class="years">{{payback}}</td>
                                {{/with}}
                                {{#with npv1}}
                                <td class="whole_dollar">{{npv}}</td>
                                {{/with}}
                            </tr>
                            {{/if}}
                            <tr>
                                <th scope="row">UEM</th>
                                {{#each response4}}
                                <td class="whole_dollar">{{fb_plus_fr}}</td>
                                {{/each}}
                                {{#with response8}}
                                <td class="whole_dollar">{{fb_fr_total}}</td>
                                {{/with}}
                                {{#with response11}}
                                <td class="whole_dollar">{{misc_savings}}</td>
                                {{/with}}
                                {{#with ann2}}
                                <td class="whole_dollar">{{cash_flow}}</td>
                                {{/with}}
                                {{#with payback2}}
                                <td class="years">{{payback}}</td>
                                {{/with}}
                                {{#with npv2}}
                                <td class="whole_dollar">{{npv}}</td>
                                {{/with}}
                            </tr>
                            <tr>
                                <th scope="row">UT</th>
                                {{#each response5}}
                                <td class="whole_dollar">{{fb_plus_fr}}</td>
                                {{/each}}
                                {{#with response9}}
                                <td class="whole_dollar">{{fb_fr_total}}</td>
                                {{/with}}
                                {{#with response12}}
                                <td class="whole_dollar">{{misc_savings}}</td>
                                {{/with}}
                                {{#with ann3}}
                                <td class="whole_dollar">{{cash_flow}}</td>
                                {{/with}}
                                {{#with payback3}}
                                <td class="years">{{payback}}</td>
                                {{/with}}
                                {{#with npv3}}
                                <td class="whole_dollar">{{npv}}</td>
                                {{/with}}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>