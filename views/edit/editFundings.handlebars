<div class="container d-flex justify-content-center align-items-center">
    <div class="row margin">
        {{#with funding}}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-white">
                <li class="breadcrumb-item"><a href="/ecmforms">Back</a></li>
                <li class="breadcrumb-item" aria-current="page">Edit {{project_id}}</li>
            </ol>
        </nav>
        <form action="/find/funding/{{id}}" id="formData" method="POST">
            <div class="card border-secondary w-100 text-light">
                <h5 style="background-color: #bf5700;" class="card-header">Fundings</h5>
                <div class="card-body w-100 text-end">
                    <div id="errors" class="text-start"></div>
                    <table id="tableData" class="table text-light text-center mt-3">
                        <thead>
                            <tr>
                                <th scope="col">Source</th>
                                <th scope="col">Implementation</th>
                                <th scope="col">Annual</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="display: none;">
                                    <div class="input-group mb-3">
                                        <input disabled value="{{project_id}}" name="project_id" type="text"
                                            class="form-control">
                                    </div>
                                </td>
                                <td>
                                    <select name="source" class="form-select source" id="inputGroupSelect01">
                                        <option disabled selected>{{source}}</option>
                                        <option value='green_fund'>Green Fund</option>
                                        <option value='facilities'>Facilities</option>
                                        <option value='repair_replacement'>R and R</option>
                                        <option value='uem'>UEM</option>
                                        <option value='aux'>AUX</option>
                                    </select>
                                </td>
                                <td>
                                    <input name="implementation" value="{{implementation}}" type="text"
                                        class="form-control implementation">
                                </td>
                                <td>
                                    <input name="annual" value="{{annual}}" type="text" class="form-control annual">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <button id={{id}} type="button" class="btn btn-success text-light updateFunding">Submit</button>
                </div>
            </div>
            {{/with}}
    </div>
</div>