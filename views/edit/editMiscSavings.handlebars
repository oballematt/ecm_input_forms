<div class="row">
    {{#with miscSavings}}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/find">Find</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit {{project_id}}</li>
        </ol>
    </nav>
    <form action='/find/miscsavings/{{id}}' method="POST">
        <div class="card border-secondary w-100 text-light" style="background-color: #333f48">
            <h5 style="background-color: #bf5700;" class="card-header">Savings</h5>
            <div class="card-body w-100 text-end">
                <table id="tableData" class="table text-light text-center mt-3">
                    <thead>
                        <tr>
                            <th scope="col">Phase</th>
                            <th scope="col">Owner</th>
                            <th scope="col">Misc Savings</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="display: none">
                                <div class="input-group mb-3">
                                    <input disabled value="{{project_id}}" name="project_id" type="text" class="form-control">
                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <select name="phase" class="form-select" id="inputGroupSelect01">
                                        <option disabled selected>{{phase}}</option>
                                        <option value='mv'>MV</option>
                                        <option vale='predicted'>Predicted</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <select name="misc_owner" class="form-select" id="inputGroupSelect01">
                                        <option disabled selected>{{misc_owner}}</option>
                                        <option value='uem'>UEM</option>
                                        <option value='nonuem'>NON-UEM</option>
                                        <option value='aux'>AUX</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <input value="{{misc_savings}}" name="misc_savings" type="text" class="form-control">
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                 <button type="submit" class="btn btn-success text-light">Submit</button>
            </div>
        </div>
    </form>
    {{/with}}
</div>