<div class="row margin">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Project Info</li>
        </ol>
    </nav>
    <div class="col-md-12">
        <div class="card mb-3 w-100 text-light" style="background-color: #333f48;">
            <h5 style="background-color: #bf5700;" class="card-header">Project Info</h5>
            <div class="card-body text-black">
                {{#each errors}}
                <div class="my-2" style="border: 1px solid black;">
                    <p>{{text}}</p>
                </div>
                {{/each}}
                <form id="formData" action="/metadata" method="POST">
                    <h5 class="disclaimer mb-3">* Project ID will be auto generated by Building and Measure Type
                        selections
                    </h5>
                    <div class="row">
                        <div class="col-md-4">
                            <div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroup-sizing-default">Project ID:</span>
                                    </div>
                                    <input autocomplete="off" value="{{project_id}}" name="project_id" type="text"
                                        id="pid" class="form-control pid">
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="inputGroupSelect01">Building:</label>
                                <select id="building" name="building" class="form-select building"
                                    id="inputGroupSelect01">
                                    <option disabled selected>Choose...</option>
                                    {{#each bldgs}}
                                    <option>{{building}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="inputGroupSelect01">Measure Type:</label>
                                <select id="measure_type" name="measure_type" class="form-select measure_type"
                                    id="inputGroupSelect01">
                                    <option disabled selected>Choose...</option>
                                    <option>AHU DDC</option>
                                    <option>AHU DDC &amp; Scheduling</option>
                                    <option>Data Center</option>
                                    <option>EBCx</option>
                                    <option>EMOCx</option>
                                    <option>Exhaust System Optimization</option>
                                    <option>Holiday Scheduling</option>
                                    <option>Lighting</option>
                                    <option>Optimum Energy</option>
                                    <option>Scheduling</option>
                                    <option>Valves</option>
                                    <option>VFD Supply Fan</option>
                                    <option>Water</option>
                                    <option>Other</option>
                                </select>

                            </div>
                            <div class="input-group mb-3">
                                <label class="input-group-text" for="inputGroupSelect01">Status:</label>
                                <select id="status" name="status" class="form-select status" id="inputGroupSelect01">
                                    <option disabled selected>Choose...</option>
                                    <option>0-Cancelled</option>
                                    <option>1-Planning</option>
                                    <option>2-In Progress</option>
                                    <option>3-In Reporting Period</option>
                                    <option>5-Completed</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 mt-4">
                            <div class="row mb-3 ">
                                <div class="col-md-6 text-end">
                                    Baseline
                                </div>
                                <div class="col-md-6 text-center">
                                    Reporting
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Start Date:</span>
                                </div>
                                <input autocomplete="off" id="datepicker" value="{{baseline_start_date}}"
                                    name="baseline_start_date" type="text" class="form-control baseline_start" />
                                <input autocomplete="off" value="{{reporting_period_start_date}}" id="reporting"
                                    name="reporting_period_start_date" type="text"
                                    class="form-control reporting_start" />
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default"># of Days:</span>
                                </div>
                                <input value="{{length_baseline_period_days}}" id="baseline_length"
                                    name="length_baseline_period_days" type="text"
                                    class="form-control baseline_length" />
                                <input value="{{length_reporting_period_days}}" id="reporting_length"
                                    name="length_reporting_period_days" type="text"
                                    class="form-control reporting_length" />
                            </div>
                        </div>
                        <div class="col-md-4 mt-4">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Staff Lead:</span>
                                </div>
                                <select id="staff_lead" name="staff_lead" class="form-select staff_lead"
                                    id="inputGroupSelect01">
                                    <option disabled selected>Choose...</option>
                                    <option>Adam Keeling</option>
                                    <option>Amanda Berens</option>
                                    <option>Buddy Bishop</option>
                                    <option>Dave Cooper</option>
                                    <option>Grace Hsieh</option>
                                    <option>John Milton</option>
                                    <option>Matt Stevens</option>
                                    <option>Meagan Jones</option>
                                    <option>Pat Mazur</option>
                                    <option>Richard Shearman</option>
                                    <option>Travis Isakson</option>
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Staff Support:</span>
                                </div>
                                <select id="staff_colead" name="staff_colead" class="form-select staff_colead"
                                    id="inputGroupSelect01">
                                    <option disabled selected>Choose...</option>
                                    <option>Adam Keeling</option>
                                    <option>Amanda Berens</option>
                                    <option>Buddy Bishop</option>
                                    <option>Dave Cooper</option>
                                    <option>Grace Hsieh</option>
                                    <option>John Milton</option>
                                    <option>Matt Stevens</option>
                                    <option>Meagan Jones</option>
                                    <option>Pat Mazur</option>
                                    <option>Richard Shearman</option>
                                    <option>Travis Isakson</option>
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Analyst:</span>
                                </div>
                                <select id="analyst" name="analyst" class="form-select analyst" id="inputGroupSelect01">
                                    <option disabled selected>Choose...</option>
                                    <option>Jeff McComas</option>
                                    <option>Josh Butler</option>
                                    <option>Laura Chiasson</option>
                                    <option>Terrell McRee</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mt-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Project Description:</span>
                        </div>
                        <textarea id="project_description" rows='5' name="project_description"
                            class="form-control project_description"
                            aria-label="With textarea">{{project_description}}</textarea>
                    </div>
                    <div class="input-group mt-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Nonenergy Benefits:</span>
                        </div>
                        <textarea id="nonenergy_benefits" rows='2' name="nonenergy_benefits"
                            class="form-control nonenergy_benefits"
                            aria-label="With textarea">{{nonenergy_benefits}}</textarea>
                    </div>
                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-success">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
