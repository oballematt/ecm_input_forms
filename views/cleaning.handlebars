                                            <th data-width='150' data-field="Expected">Expected</th>
                                            <th data-width='150' data-field="Replacement">Replacement</th>
                                            <th data-width='150' data-field="Reason">Reason</th>
                                            <th data-width="200" data-field="Notes">Notes</th>
                                    </thead>
